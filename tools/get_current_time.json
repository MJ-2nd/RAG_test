{
  "name": "get_current_time",
  "description": "Returns current date and time. Provided in ISO 8601 format.",
  "parameters": {
    "type": "object",
    "properties": {
      "timezone": {
        "type": "string",
        "description": "Timezone (e.g., 'UTC', 'Asia/Seoul', 'America/New_York')",
        "default": "local"
      },
      "format": {
        "type": "string",
        "description": "Time format ('iso', 'timestamp', 'readable')",
        "default": "iso",
        "enum": ["iso", "timestamp", "readable"]
      }
    }
  },
  "examples": [
    {},
    {
      "timezone": "Asia/Seoul"
    },
    {
      "format": "readable"
    },
    {
      "timezone": "UTC",
      "format": "timestamp"
    }
  ]
} 