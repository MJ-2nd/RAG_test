{
  "name": "search_documents",
  "description": "RAG 시스템을 통해 문서를 검색하고 관련 정보를 찾습니다.",
  "parameters": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "검색할 질의 내용"
      },
      "top_k": {
        "type": "integer",
        "description": "반환할 최대 결과 수",
        "default": 5,
        "minimum": 1,
        "maximum": 20
      },
      "similarity_threshold": {
        "type": "number",
        "description": "유사도 임계값 (0.0-1.0)",
        "default": 0.3,
        "minimum": 0.0,
        "maximum": 1.0
      }
    },
    "required": ["query"]
  },
  "examples": [
    {
      "query": "인공지능이란 무엇인가?",
      "top_k": 3
    },
    {
      "query": "머신러닝 알고리즘 종류",
      "top_k": 5,
      "similarity_threshold": 0.4
    }
  ]
} 